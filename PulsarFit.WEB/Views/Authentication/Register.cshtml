@inject AppSettings AppSettings
@inject Localizer Localizer
@model UserRegisterRequest
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<!-- begin::Head -->
<head>
    <meta charset="utf-8" />
    <title>
        Register
    </title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="~/theme/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/theme/assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <link rel="shortcut icon" href="~/img/logo.png" />

</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->
    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(~/img/logo.png);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo">
                        <a href="#">
                            <img id="profile-photo-img" alt="" src="~/img/user-placeholder.jpg" style="max-width: 100px;" />
                        </a>
                    </div>
                    <div class="m-login__signin">
                        <div class="m-login__head">
                            <h3 class="m-login__title">
                                @Localizer.Sign_up_to @AppSettings.AppName
                            </h3>
                        </div>
                        <form class="m-login__form m-form" asp-controller="Authentication" asp-action="Register" enctype="multipart/form-data">
                            <input id="profile-photo-input" type="file" name="formFile" hidden="hidden" />

                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="@Localizer.First_name" asp-for="FirstName" autocomplete="off">
                                <span class="text-danger" class="text-danger" asp-validation-for="FirstName"></span>
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="@Localizer.Last_name" asp-for="LastName" autocomplete="off">
                                <span class="text-danger" class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="@Localizer.Username" asp-for="Username" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input" type="text" placeholder="@Localizer.Email" asp-for="Email" autocomplete="off">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-login__form-input--last" type="password" placeholder="@Localizer.Password" asp-for="Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group m-form__group">
                                <input class="form-control m-input m-login__form-input--last" type="password" placeholder="@Localizer.Password_confirm" asp-for="PasswordConfirmed">
                                <span class="text-danger" asp-validation-for="PasswordConfirmed"></span>
                            </div>
                            <div class="m-login__form-action">
                                <button class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air  m-login__btn">
                                    @Localizer.Sign_up
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="~/theme/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/theme/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Base Scripts -->
    <!--begin::Page Snippets -->
    @*<script src="~/theme/assets/snippets/pages/user/login.js" type="text/javascript"></script>*@
    <!--end::Page Snippets -->
</body>
<!-- end::Body -->
</html>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#profile-photo-img').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#profile-photo-input").change(function () {
        readURL(this);
    });

    $("#profile-photo-img").on("click", function () {
        $("#profile-photo-input").click();
    });
</script>