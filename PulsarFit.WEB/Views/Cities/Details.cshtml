@model CityDTO
@inject Localizer Localizer
@{ Layout = null; }

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Localizer.City_details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <div class="m-portlet__body">

        <div class="col-md-12 row">
            <div class="col-md form-group">
                <label>@Localizer.Name</label>
                <input value="@Model.Name" class="form-control m-input" disabled>
            </div>
        </div>

        <div class="col-md-12 row">
            <div class="col-md form-group">
                <label>@Localizer.Country</label>
                <input value="@Model.Country?.Name" class="form-control m-input" disabled>
            </div>
        </div>

    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-secondary" data-dismiss="modal">@Localizer.Close</button>
</div>
