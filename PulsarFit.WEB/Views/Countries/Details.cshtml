@model CountryDTO
@inject Localizer Localizer
@{ Layout = null; }

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Localizer.Country_details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <div class="m-portlet__body">

        <div class="col-md-12 row">
            <div class="col-md form-group">
                <label>@Localizer.Code</label>
                <input value="@Model.Code" class="form-control m-input" disabled>
            </div>

            <div class="col-md form-group">
                <label>@Localizer.Name</label>
                <input value="@Model.Name" class="form-control m-input" disabled>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12 row">
            <div class="col-md form-group">
                <label>@Localizer.Currency</label>
                <input value="@Model.Currency?.Name" class="form-control m-input" disabled>
            </div>
        </div>

    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-secondary" data-dismiss="modal">@Localizer.Close</button>
</div>
